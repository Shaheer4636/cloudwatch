sudo yum -y install jq >/dev/null 2>&1 || true

# Search all regions for your metric
for R in $(aws ec2 describe-regions --query 'Regions[].RegionName' --output text); do
  OUT=$(aws cloudwatch list-metrics --region "$R" \
    --namespace "Custom/APM" --metric-name "IngestedBytes" --max-items 5 --output json)
  echo "$OUT" | jq -c --arg r "$R" 'select(.Metrics|length>0) | {"region":$r,"sample":.Metrics[0]}'
done
